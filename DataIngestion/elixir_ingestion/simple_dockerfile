FROM elixir:1.18.2

WORKDIR /app

# Install dependencies (using apt for Debian-based image)
RUN apt-get update && \
    apt-get install -y build-essential git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Install hex and rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Install Phoenix archive
RUN mix do \
    local.hex --force, \
    archive.install hex phx_new --force

# Copy the data processing script
COPY process_data_file.exs .

# Create results directory
RUN mkdir -p results

EXPOSE 4000

# Use ENTRYPOINT instead of CMD as required
ENTRYPOINT ["sh", "-c", "echo 'Container is running. Use docker exec to run commands.' && tail -f /dev/null"]
